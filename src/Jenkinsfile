pipeline {
    parameters {
        choice(name: 'NODE', choices: ['win', 'mac'], description: 'Node')
    }

    agent {
        label params.NODE
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'dev',
                        credentialsId: 'bitbucket',
                        url: 'https://bitbucket.org/prosaas/cryptotanks-unity.git'
            }
        }
        stage('Build') {
            steps {
                script {
                    log.info("1")
                    log.info(UNITY_HUB_PATH)
                    log.info("2")
                    uniytHub.init(UNITY_HUB_PATH)
                    log.info("3")
                    def unityPath = uniytHub.getUnityPath('2021.1.28f1', 'f3f9dc10f3dd', true)
                    log.info("4")
                    log.info(uniytPath)
                    log.info("5")
                    unity.init(unityPath)
                    log.info("6")
                    unity.execute('.', 'JenkinsBuilder.Build', 'android')
                }
            }
        }
    }
}
