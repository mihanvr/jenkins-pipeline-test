pipeline {
    parameters {
        choice(name: 'NODE', choices: ['win', 'mac'], description: 'Node')
    }

    agent {
        label params.NODE
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'dev',
                        credentialsId: 'bitbucket',
                        url: 'https://bitbucket.org/prosaas/cryptotanks-unity.git'
            }
        }
        stage('Build') {
            steps {
                script {
                    unity.execute(env.UNITY_PATH, '.', 'JenkinsBuilder.Build', 'android')
                }
            }
        }
    }
}
